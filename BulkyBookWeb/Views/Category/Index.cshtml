@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="CreateCategory" class="btn btn-primary ">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Category
            </a>
        </div>
     </div>
     <br />

    <table class="table table-bordered table-striped" stylr="width:100%">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                DisplayOrder
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <thead>
        @foreach(var obj in Model)
        {
            <tr>
                <td width = "50%">
                    @obj.Name
                </td width="30%">
                <td>
                    @obj.DisplayOrder
                </td>
                <td>
                    <a asp-route-id="@obj.Id" asp-controller="Category" asp-action="Edit" 
                       class="btn btn-primary mx-2">
                       <i class="bi bi-pencil-square"></i>
                       Edit
                    </a>
                </td>
                <td>
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id"
                       class="btn btn-danger mx-2">
                       <i class="bi bi-trash-fill"></i>
                       Delete
                    </a>
                </td>
            </tr>
        }
    </thead>
</table>





</div>
